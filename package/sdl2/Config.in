config BR2_PACKAGE_SDL2
	bool "SDL2"
	help
	  Simple DirectMedia Layer - SDL2 is a library that allows
	  programs portable low level access to a video framebuffer,
	  audio output, mouse, and keyboard.

	  http://www.libsdl.org/

if BR2_PACKAGE_SDL2

config BR2_PACKAGE_SDL2_FBCON
	bool "SDL2 framebuffer console video driver"
	default y

config BR2_PACKAGE_SDL2_DIRECTFB
	bool "SDL2 DirectFB video driver"
	depends on BR2_PACKAGE_DIRECTFB

config BR2_PACKAGE_SDL2_QTOPIA
	bool "SDL2 Qtopia video driver"
	depends on BR2_PACKAGE_QT

config BR2_PACKAGE_SDL2_X11
	bool "SDL2 X11 video driver"
	depends on BR2_PACKAGE_XORG7
	select BR2_PACKAGE_XLIB_LIBX11
	select BR2_PACKAGE_XLIB_LIBXEXT

endif
